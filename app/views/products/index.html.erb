<p id="notice"><%= notice %></p>



<h1>Listing Products</h1>



<%= search_form_for @search do |f| %>      <%# mul comment tag ransack gem support search_form_for to make a searching field and search   -%>

  <div class="field">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont %>
  </div>
  <div class="actions">
    <%= f.submit "Search" %>
  </div>
<% end %>

<tr>   <%# sort_link used to sort by name and desc in assending nd descending order-%>
  <th><%= sort_link(@search, :name, "Product Name") %></th>
  <th><%= sort_link(@search, :description, "Description") %> </th>
</tr>



<table>
  <thead>
    <tr>
     
      <th>Name</th>
      <th>Description</th>
      <th> Image </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr> 
         
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td> <%= image_tag product.image (:thumb) %> </td>
 
        

        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

         <%= paginate @products %> <%# for displaying pagination netx/prev page-%> 
        <%= page_entries_info @products %>
 <br>      

<%= link_to 'New Product', new_product_path %>



